package geo


// ScaledRad is a unit of Pi / (2^31 - 1), this has ~1 meter
// resolution at the earth's equator.
type ScaledRad int32

func scaleDegree(deg float64) ScaledRad {
	if (deg < -180.0 || deg >= 180.0) {
		panic(fmt.Sprintf("Degree out of range: %.12f", deg))
	}
	unit := (deg / 180.0)  // Range [-1,1)
	return ScaledRad(unit * float64(1 << 31))
}

